<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginStart="@dimen/item_post_margin_horizontal"
        android:layout_marginEnd="@dimen/item_post_margin_horizontal"
        android:layout_marginTop="@dimen/item_post_padding_vertical"
        android:layout_marginBottom="@dimen/item_post_padding_vertical"
        >


        <TextView
            android:id="@+id/text_post"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="#201E1E"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/item_post_margin_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>
</LinearLayout>