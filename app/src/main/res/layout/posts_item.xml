<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_post"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginStart="@dimen/item_post_margin_horizontal"
        android:layout_marginEnd="@dimen/item_post_margin_horizontal"
        android:layout_marginTop="@dimen/item_post_padding_vertical"
        android:layout_marginBottom="@dimen/item_post_padding_vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date_post"
                android:textSize="15sp"
                android:layout_alignParentStart="true"
                android:paddingStart="@dimen/item_post_margin_horizontal"
                android:paddingEnd="@dimen/item_post_margin_horizontal"
                android:paddingTop="@dimen/item_detail_margin_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_post"
                android:layout_below="@+id/date_post"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/colorText"
                android:fontFamily="sans-serif-light"
                android:paddingStart="@dimen/item_post_margin_horizontal"
                android:paddingEnd="@dimen/item_post_margin_horizontal"
                android:paddingTop="@dimen/item_detail_margin_horizontal"
                android:paddingBottom="@dimen/item_detail_margin_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>